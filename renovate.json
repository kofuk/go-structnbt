{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": "\\.go$",
      "matchStrings": [
        "//go:generate\\s+go\\s+run\\s+(?<depName>[^@]+)@(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "groupName": "Go",
      "matchDatasources": [
        "golang-version"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
